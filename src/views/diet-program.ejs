<%- include('partials/header.ejs') %>
<%- include('partials/navigation.ejs') %>

<div class="container">
    <form action="/diet-program" method="POST">
        <h2 class="my-4 text-center">Diyet Menüsü</h2>
        <h4 class="my-4 text-center">Geçerli Menüm: </h4>
        <% if (myMenu !== "empty") { %>
        <p class="text-center"> 
            <% for (let i = 0; i < myMenu.length; i++) { %>
                <%= myMenu[i].isim %> : <%= myMenu[i].kalori %> Kalori <br>
            <% } %>
        </p>
        <% } else {%>
            <p class="text-center">Henüz bir menü oluşturmadınız.</p>
        <% } %>
        <p style="font-weight: bold;">Ürünleri seçin: (Günlük kalori ihtiyacınız: <%= dailyCalorieIntake %>)</p>
        <div class="row">
            <% for (let i = 0; i < products.length; i++) { %>
            <div class="col-md-4">
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="<%= products[i] %>" name="products[]" value="<%= products[i].id %>">
                    <label style="font-weight: bold;" class="form-check-label" for="<%= products[i] %>"><%= products[i].isim %>  :  <%= products[i].kalori %> Kalori </label>
                </div>
            </div>
            <% } %>
        </div>
        <br>
        <button type="submit" class="btn btn-primary">Gönder</button>
    </form>
</div>


<%- include('partials/end.ejs') %>