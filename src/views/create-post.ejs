<%- include('partials/header.ejs') %>
<%- include('partials/navigation.ejs') %>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="my-4 text-center">Post Paylaş</h2>
            <form enctype="multipart/form-data" method="POST" action="/create-post">
                <div class="mb-3">
                    <label for="baslik" class="form-label">Başlık</label>
                    <input type="text" class="form-control" id="baslik" name="title" required>
                </div>
                <div class="mb-3">
                    <label for="icerik" class="form-label">İçerik</label>
                    <textarea class="form-control" id="icerik" name="content" rows="4" required></textarea>
                </div>
                <div class="mb-3">
                    <label for="foto" class="form-label">Fotoğraf Seç</label>
                    <input type="file" class="form-control" id="foto" name="foto" accept="image/*" required>
                </div>
                <button type="submit" class="btn btn-primary">Gönder</button>
            </form>
        </div>
    </div>
</div>


<%- include('partials/end.ejs') %>